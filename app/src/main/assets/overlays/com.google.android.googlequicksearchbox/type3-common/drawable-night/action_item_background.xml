<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/dim_foreground_light" />
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="#ffffffff" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/transparent" />
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="#ffffffff" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/dim_foreground_light" />
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="#ffffffff" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/button_material_dark" />
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="#ffffffff" />
        </shape>
    </item>
</selector>
