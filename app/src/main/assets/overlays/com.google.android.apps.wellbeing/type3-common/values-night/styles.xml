    <style name="Base.Widget.AppCompat.Light.PopupMenu" parent="@*android:style/Widget.Material.PopupMenu" />
    <style name="DurationNumberPicker" parent="@*android:style/Widget.Material.NumberPicker">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:headerBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:numbersTextColor">@*android:color/white</item>
        <item name="android:numbersSelectorColor">@*android:color/dim_foreground_light</item>
